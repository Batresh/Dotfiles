# Dropdown & Floating traits #
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] move scratchpad
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_*"] scratchpad show
for_window [instance="dropdown_ncmpcppdd"] resize set 1100 450
for_window [instance="dropdown_dropdowncalc"] resize set 800 400
for_window [instance="dropdown_dropdowncalc"] border pixel 2
for_window [instance="dropdown_*"] move position center
for_window [class="mpv"] floating enable move right 1223px,move down 677px
for_window [class="mpv"] move scratchpad
for_window [class="mpv"] sticky enable
for_window [class="mpv"] scratchpad show
for_window [class="mpv"] resize set 700
for_window [title="sxiv"] floating enable
for_window [class="VirtualBox Machine"] floating enable
###### DEFINITIONS ######
set $mod Mod4
set $alt Mod1
set $coloract "#AF960B"
set $colorin "#1f2e35"
set_from_resource $color15 i3wm.color15 "#fffff7"
set_from_resource $split i3wm.color10 "#d9f75e"
set_from_resource $coloru i3wm.color2 "#9FB156"
set_from_resource $color0 i3wm.color0 "#0d1316"
set_from_resource $color8 i3wm.color8 "#1f2e35"

font pango:monospace 8

exec --no-startup-id "sleep 2 && musnify-mpd"
##### GAPS & BORDERS ######
gaps outer 0
gaps inner 12
for_window [class="^.*"] border pixel 2
# Activate smart borders (always)
smart_borders on
smart_gaps on
######### COLORS ##########

# class                 border    backgr    text    indicator child_border
client.focused          $coloract $coloract $color15 $split  $coloract
client.focused_inactive $coloract $coloract $color15 $split  $colorin
client.unfocused        $colorin  $colorin  $color15 $split  $colorin
client.urgent           $coloru   $coloru   $color15 $coloru $coloru
client.placeholder      $color0   $color8   $color15 $color0 $color8
client.background       $color0
##### bar ####
bar {
	font pango:Fantasque Sans Mono, Hack Nerd Font 10 

#  mode hide 

	colors {
		# Whole color settings
		background #282828
		statusline #ebdbb2
		separator  #a89984

    #                  border  backgr. text
		focused_workspace  #fbf1c7 #fbf1c7 #282828
		active_workspace   #282828 #282828 #fbf1c7
		inactive_workspace #282828 #282828 #fbf1c7
		urgent_workspace   #cc241d #cc241d #ebdbb2
	}
 
	position top 
	status_command i3status-rs ~/.config/i3/status.toml       
}

bar {
	font pango:Fantasque Sans Mono, Font Awesome 5 Free, Hack Nerd Font 10

#  mode hide 
  workspace_buttons no 

	colors {
		# Whole color settings
		background #282828
		statusline #ebdbb2
		separator  #a89984

    #                  border  backgr. text
		focused_workspace  #fbf1c7 #fbf1c7 #fbf1c7
		active_workspace   #3c3836 #3c3836 #3c3836
		inactive_workspace #3c3836 #3c3836 #3c3836
		urgent_workspace   #cc241d #cc241d #cc241d

  }

	position bottom 
	status_command /usr/share/bumblebee-status/bumblebee-status -m nic network_traffic disk:root disk:home bluetooth shell:corona shell:weather time date  -p nic.states=^down root.format="{path}: {used}/{size} ({percent:05.02f}%)" root.path="/" home.path='/home' home.format="{path}: {used}/{size} ({percent:05.02f}%)" corona.command="~/.local/bin/tools/corona" corona.interval=600 weather.command="~/.local/bin/tools/weather" weather.interval=600 time.format="%H:%M:%S" date.format="%a, %b %d %Y" -t gruvbox-powerline 
}
 
# I3 RELATED EXEC COMMANDS # 
bindsym $mod+v exec i3 "[class=\"mpv\"] scratchpad show"
bindsym $mod+m exec --no-startup-id ddspawn tmuxdd
###### KEYBINDINGS #######

floating_modifier $mod

bindsym $mod+Shift+q kill

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+f fullscreen toggle

bindsym $mod+t split toggle

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+l exec --no-startup-id i3resize left
bindsym $mod+p exec --no-startup-id i3resize up
bindcode $mod+47 exec --no-startup-id i3resize down
bindcode $mod+48 exec --no-startup-id i3resize right

bindsym $mod+Shift+Left move left 30
bindsym $mod+Shift+Up move up 30
bindsym $mod+Shift+Down move down 30
bindsym $mod+Shift+Right move right 30

bindsym $mod+Shift+l move left 30
bindsym $mod+Shift+p move up 30
bindcode $mod+Shift+47 move down 30
bindcode $mod+Shift+48 move right 30
