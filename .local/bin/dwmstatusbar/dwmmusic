#!/bin/sh

filter() {
	sed "/^volume:/d" | tac | sed -e "s/\\&/&amp;/g;s/\\[paused\\].*/[9]/g;s/\\[playing\\].*//g" | tr -d '\n' | cut -c 1-31 #| sed -e "s/$/\n/g"
	}
musiclength=$(mpc status | filter)
size=${#musiclength}
[ $size -gt 30 ] && echo " $musiclength.. [1]" && exit 0
[ $size -gt 3 ]  && echo " $musiclength[1] "

