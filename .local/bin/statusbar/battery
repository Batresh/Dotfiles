 #!/bin/sh
case $BLOCK_BUTTON in
	3) notify-send "🔋 Battery module" "🔋: discharging
🛑: not charging
♻: stagnant charge
🔌: charging
⚡: charged
❗: battery very low!" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

for battery in /sys/class/power_supply/????
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity) || break
	status=$(sed "s/Discharging/🔋/;s/Not charging/🛑[4]/;s/Charging/🔌[6]/;s/Unknown/♻️ /;s/Full/⚡[6]/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a ❗ as a warning.
	[ "$capacity" -gt 49 ] && [ "$status" = "🔋" ] && color="[6]"
	 [ "$capacity" -le 50 ] && [ "$capacity" -gt 25 ] && [ "$status" = "🔋" ] && status="  " && color="[4]"
	 [ "$capacity" -le 26 ] && [ "$capacity" -gt 5 ] && [ "$status" = "🔋" ] && status="  " && color="[9]❗"
	 [ "$capacity" -le 6 ] && [ "$status" = "🔋" ] && status="  " && color="[9]❗❗❗"

	echo "$status$color$capacity%[1]  "
	unset warn
done
