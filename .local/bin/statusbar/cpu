#!/bin/sh
case $BLOCK_BUTTON in
	1) notify-send "🖥 CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
	2) setsid "$TERMINAL" -e htop & ;;
	3) notify-send "🖥 CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- Middle click to open htop." ;;
esac

read cpu a b c previdle rest < /proc/stat
prevtotal=$((a+b+c+previdle))
sleep 0.5
read cpu a b c idle rest < /proc/stat
total=$((a+b+c+idle))
cpu=$((100*( (total-prevtotal) - (idle-previdle) ) / (total-prevtotal) ))
[ $cpu -gt 90 ] && warn=‼
cpu_t=$(cat /sys/class/hwmon/hwmon?/temp1_input)
[[ $cpu_t == "" ]] && cputemp="SEN N/A⁉" || cputemp=$(expr "$cpu_t" / 1000) && [ $cputemp -gt 70 ] && warn2=⚠️
[[ $cputemp != "SEN N/A⁉" ]] && cputemp=$(echo $cputemp | awk '{print $1 "°C"}')
echo " $cpu%$warn $cputemp$warn2  "
