#!/bin/sh
CONNAME=$(nmcli -a | grep 'Wired connection' | awk 'NR==1{print $1}')
if [ "$CONNAME" = "" ]; then
	CONNAME=$(nmcli -t -f active,ssid dev wifi | grep '^yes' | cut -c 5-)
	[ -z $CONNAME ] && exit 0
fi
[ -s ~/.cache/conname ] || exit 0
set -o pipefail
curl -s https://ipinfo.io/ip | cut -c -6 | awk '{print "üåé^c#fb4934^"$1"..^d^) "}' || echo "^c#cc241d^Ô¶ç Webreqfail^d^) "
