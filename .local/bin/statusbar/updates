#!/bin/bash

if ! updates_arch=$(checkupdates 2>&1 | sed 1d | wc -l ); then
    updates_arch=0
fi

if ! updates_aur=$(yay -Qum 2> /dev/null | wc -l); then
    updates_aur=0
fi

updates=$(("$updates_arch" + "$updates_aur"))

if [ "$updates" -gt 0 ]; then
    echo "^c#83a598^$updates_arch  $updates_aur ^c#fe8019^^d^ "
else
    exit 0
fi
