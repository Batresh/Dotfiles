#!/bin/bash
# a simple dmenu session script 
. "${HOME}/.cache/wal/colors.sh"
case "$(echo -e " Lock\n Shutdown\nﰇ Restart\n鈴 Suspend\n Logout" | dmenu \
    -fn "Cousine Nerd Font:pixelsize=17" \
    -nb "$color8" \
    -nf "$color7" \
    -sf "$color7" \
    -sb "$color1" \
    -w 1890 -x 12 -y 12 -i -p \
    "")" in
        " Lock") exec lock;;
        " Shutdown") exec shutdown;;
        "ﰇ Restart") exec reboot;;
	"鈴Suspend") exec systemctl suspend;;
        " Logout") exec i3-msg exit;;
esac
